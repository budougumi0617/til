{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*"]
}